<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache">
    <meta http-equiv="cache-control" content="no-cache">
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <link rel="icon" href="/static/favicon.ico" type="image/x-icon">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width, viewport-fit=cover">
    <title></title>

    {% block scripts %}{% endblock %}

    <style>
      * {
        margin: 0;
        box-sizing: border-box;
        -webkit-tap-highlight-color: rgba(0,0,0,0);
      }
      body, html {
        height: 100%;
        width: 100%;
        overflow-y: hidden;
        overflow-x: auto;
        background-color: #fff;
        font-size: 100px;
        color: #333;
        font-family: Microsoft YaHei,Arial,sans-serif;
      }
      #root {
        width: 100%;
        height: 100%;
        overflow-y: scroll;
        overflow-x: auto;
        background-color: #f8f8f8;
        position: relative;
        font-size: .14rem;
      }

      .container {
        background-color: #ebebeb;
        border-radius: 0.04rem;
        overflow: hidden;
        width: 80%;
        margin: 0.3rem auto auto;
      }
      .header {
        font-size: .34rem;
        font-weight: 700;
        line-height: .6rem;
        background-color: #dbdbdb;
        color: #4d4d4d;
      }
      .content {
        padding: 0 0.52rem 0.52rem;
      }

      .content .block {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-top: 0.52rem;
      }
      .content .block .tips {
        color: #4d4d4d;
        font-size: .26rem;
        margin-right: 0.64rem;
      }
      .content .block .line {
        background-color: #c9c7c4;
        height: 0.02rem;
        flex: 1 1 auto;
      }

      .content .table-container {
        margin-top: 0.22rem;
      }
      .content .table-container table {
        margin-top: 0.12rem;
        width: 100%;
        border-spacing: 0;
        border-collapse: collapse;
      }
      .content .table-container th, td {
        border: 0.02rem solid #c4c2bf;
        background-color: #dbd7d3;
        padding: 0.11rem 0.22rem;
      }
      .content .table-container td {
        color: #a38052;
      }

      .content .desc-line {
        padding: .05rem;
        color: #505252;
      }
      .content .desc-line.gold {
        background-color: #dcbba5;
      }
      .content .desc-line.purple {
        background-color: #b6abbf;
      }
      .content .desc-line.blue {
        background-color: #a5bacc;
      }

      .up-arrow::after {
        content: "";
        position: relative;
        display: inline-block;
        background-size: cover;
        top: 3px;
        left: 5px;
        width: 0.22rem;
        height: 0.22rem;
        background-image: url(data:image/png;base64,);
      }
    </style>
    <link rel="stylesheet" media="(max-width: 800px)" href="//static/css/index.css" />
  </head>
  <body>
    <div id="root">
      <div class="container">
        <div class="header">
          {% block header %}{% endblock %}
        </div>
        <div class="content">
          {% block content %}{% endblock %}
        </div>
      </div>
    </div>
  </body>
</html>
